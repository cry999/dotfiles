[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[add.interactive]
  useBuiltin = false

[delta]
  # `features` does not work
  syntax-theme = "Catppuccin Frappe"
  side-by-side = true
  line-numbers = true
  navigate = true
  light = false

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
